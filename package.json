{
  "name": "recipe-viewer",
  "version": "1.0.0",
  "description": "An interactive recipe viewer application with voice control and cooking mode",
  "main": "src/js/index.js",
  "scripts": {
    "start": "webpack serve --mode development",
    "start:api": "nodemon server.js",
    "dev": "concurrently \"npm run start:api\" \"npm run start\"",
    "clean-ports": "node scripts/clean-ports.js",
    "dev:clean": "npm run clean-ports && npm run dev",
    "build": "webpack --mode production",
    "deploy": "node scripts/deploy-gh-pages.js",
    "predeploy": "npm run build",
    "test": "jest",
    "lint": "eslint src/**/*.js"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.5.1",
    "concurrently": "^8.2.2",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.7",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.56.0",
    "gh-pages": "^6.1.1",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "style-loader": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "license": "MIT"
}
