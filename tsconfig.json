{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./js",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "allowJs": true,
    "lib": ["DOM", "ES2020"],
    "paths": {
      "@/*": ["./js/*"],
      "@core/*": ["./js/modules/core/*"],
      "@timer/*": ["./js/modules/timer/*"],
      "@utils/*": ["./js/utils/*"]
    }
  },
  "include": ["./js/**/*", "Graveyard/initialize-recipe-timer.js", "Graveyard/multi-timer.js", "Graveyard/scripts.js", "Graveyard/simple-timer.js", "Graveyard/viewer-script.js", "Graveyard/voice-commands.js", "Graveyard/voice-debug.js", "Graveyard/voice-integration.js", "Graveyard/voice-module-loader.js"],
  "exclude": ["node_modules", "dist"]
} 